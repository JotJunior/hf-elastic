{
    "name": "jot/hf-elastic-core",
    "description": "Core components for Elasticsearch integration with HyperF 3.1",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jot",
            "email": "contato@jot.com.br"
        }
    ],
    "require": {
        "php": ">=8.1",
        "hyperf/framework": "3.1.*",
        "hyperf/di": "3.1.*",
        "hyperf/config": "3.1.*",
        "hyperf/command": "3.1.*",
        "hyperf/stringable": "3.1.*"
    },
    "autoload": {
        "psr-4": {
            "Jot\\HfElasticCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jot\\HfElasticCore\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-html=coverage/"
    },
    "extra": {
        "hyperf": {
            "config": "Jot\\HfElasticCore\\ConfigProvider"
        }
    },
    "minimum-stability": "stable"
}
