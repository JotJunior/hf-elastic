{
    "name": "jot/hf-elastic-query",
    "description": "Query builder components for Elasticsearch integration with HyperF 3.1",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jot",
            "email": "contato@jot.com.br"
        }
    ],
    "require": {
        "php": ">=8.1",
        "hyperf/framework": "3.1.*",
        "hyperf/di": "3.1.*",
        "hyperf/config": "3.1.*",
        "hyperf/stringable": "3.1.*",
        "elasticsearch/elasticsearch": "^7.0",
        "jot/hf-elastic-core": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Jot\\HfElasticQuery\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jot\\HfElasticQuery\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-html=coverage/",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "phpstan analyse --ansi"
    },
    "extra": {
        "hyperf": {
            "config": "Jot\\HfElasticQuery\\ConfigProvider"
        }
    },
    "minimum-stability": "stable"
}
